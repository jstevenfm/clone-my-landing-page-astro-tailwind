---
import Header from "../components/Headers.astro"
import Footer from "../components/Footer.astro"
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<html lang="en"  class="font-notosans text-white">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    	<link rel="preconnect" href="https://fonts.googleapis.com">
    	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<title>{title}</title>
		<meta name="description" content="Desarrollador Web. Frontend, JavaScript, React, Astro, CSS">
		<meta property="og:url" content="https://jstevenfm.github.io" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Desarrollador Web. Frontend, JavaScript, React, Astro, CSS">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:creator" content="@jstevenfm">
		<meta name="twitter:site" content="@jstevenfm">
		<meta name="twitter:image" content="/favicon.svg">
		<meta property="og:locale" content="es">
		<meta property="og:image" content="/favicon.svg">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content="Desarrollador Web. Frontend, JavaScript, React, Astro, CSS">
		<meta name="google-site-verification" content="1JwxxV7D7Sd_OXEKlc8IlNw7os50wAXtSeO6PYod4EI" />
		<ViewTransitions />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html {
		background-image: linear-gradient(100deg, #27336e 0%, #8478f8 100%);
		scroll-behavior: smooth;
		scroll-padding: 50px;
	}
</style>