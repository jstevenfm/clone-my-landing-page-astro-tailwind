---
import Header from "../components/Headers.astro"
import Footer from "../components/Footer.astro"
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<html lang="en"  class="font-notosans text-white">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    	<link rel="preconnect" href="https://fonts.googleapis.com">
    	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    	<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html {
		background-image: linear-gradient(100deg, #27336e 0%, #8478f8 100%);
	}
</style>